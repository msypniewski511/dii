<p style="color: green"><%= notice %></p>


<%= link_to "New idea", new_idea_path %>
<div class="container-fluid py-4">
  <div class="row">
    <div class="col-12">
      <div class="card mb-4">
        <div class="card-header pb-0">
          <h6>Ideas</h6>
        </div>
        <div class="card-body px-0 pt-0 pb-2">
          <div class="table-responsive p-0">
            <table class="table align-items-center mb-0">
              <thead>
                <tr>
                  <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Due date</th>
                  <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Priority</th>
                  <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Action point</th>
                  <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Status</th>
                  <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Added to business plan</th>
                  <th class="text-secondary opacity-7"></th>
                </tr>
              </thead>
              <tbody>
                <% @ideas.each do |idea| %>
                  <tr>
                    <td>
                      <div class="d-flex px-2 py-1">
                        <%= idea.due_date %>
                      </div>
                    </td>
                    <td>
                      <div class="d-flex px-2 py-1">
                        <%= idea.priority %>
                      </div>
                    </td>
                    <td>
                      <div class="d-flex px-2 py-1">
                      <%= idea.action_point %>
                      </div>
                    </td>
                    <td class="align-middle text-center text-sm">
                      <%= idea.status %>
                    </td>
                    <td class="align-middle text-center text-sm">
                      <span class="badge badge-sm <%= idea.added_to_business_plan ? 'bg-gradient-success' : 'bg-gradient-secondary'%>"><%= idea.added_to_business_plan %></span>
                    </td>
                    <td class="align-middle">
                      <%= link_to "Show", idea, class: 'text-secondary font-weight-bold text-xs', 'data-toggle': "tooltip", 'data-original-title': "Show idea" %>
                      <%= link_to "Edit", edit_idea_path(idea), class: 'text-secondary font-weight-bold text-xs', 'data-toggle': "tooltip", 'data-original-title': "Edit idea" %>
                    </td>
                  </tr>

                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

