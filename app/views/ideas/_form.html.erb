<%= form_with(model: idea) do |form| %>
  <% if idea.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(idea.errors.count, "error") %> prohibited this idea from being saved:</h2>

      <ul>
        <% idea.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
      <%= form.label :due_date, style: "display: block" %>
      <%= form.date_field :due_date %>
  </div>

  <div class="row">
    <%= form.label :priority, style: "display: block" %>
    <%= form.select :priority, Idea.priorities.keys.map {|p| [p.humanize.capitalize, p]}, {}, class: 'form-control' %>
  </div>

  <div class="row">
    <%= form.label :action_point, style: "display: block" %>
    <%= form.text_field :action_point %>
  </div>

  <div class="row">
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status, Idea.statuses.keys.map {|p| [p.humanize.capitalize, p]}, {}, class: 'form-control' %>
  </div>

  <div class="row">
    <%= form.label :added_to_business_plan, style: "display: block" %>
    <%= form.check_box :added_to_business_plan %>
  </div>

  <div class="row">
    <%= form.submit class:'btn btn-success' %>
  </div>
<% end %>
