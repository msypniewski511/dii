.relationships {
  grid-column: 7/9;
}
.channels {
  grid-column: 7/9;
}
.segments {
  grid-column: 9/11;
}

/* Bottom Row */
.cost {
  grid-column: span 5;
  grid-row: 3 / 4;
  background: #f2dede;
} /* Wide */
.revenue {
  grid-column: span 5;
  grid-row: 3 / 4;
  background: #d9edf7;
} /* Wide */

/* Cost Structure & Revenue Streams occupy 50% of row 3 */
.cost,
.revenue {
  grid-column: span 5; /* Each takes 50% of the last row */
}
.strategic-partnerships,
.pains,
.gains,
.cost-details,
.pricing {
  grid-column: span 2;
  background-color: aqua;
}
.metrics {
  grid-column: span 10;
}

/* Responsive Design */
@media (max-width: 992px) {
  .bmc-grid {
    grid-template-columns: 1fr 1fr; /* Two columns on tablets */
    grid-template-rows: auto;
  }

  .bmc-item {
    font-size: 12px;
    padding: 10px;
  }

  .partners,
  .segments,
  .value {
    grid-column: 1 / 3; /* Full width */
  }

  .cost,
  .revenue {
    grid-column: 1 / 3; /* Stack on mobile */
  }
}

@media (max-width: 600px) {
  .bmc-grid {
    grid-template-columns: 1fr; /* Single column on mobile */
  }

  .bmc-item {
    grid-column: 1 / 2;
  }
}

