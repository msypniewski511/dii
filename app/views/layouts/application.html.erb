    <script>
      document.addEventListener('DOMContentLoaded', function () {
        const banner = document.querySelector('.coming-soon-banner');
        if (banner) {
          const closeBtn = banner.querySelector('.close-btn');
          if (closeBtn) {
            closeBtn.addEventListener('click', () => {
              banner.style.display = 'none';
            });
          }

          const launchDate = new Date();
          launchDate.setDate(launchDate.getDate() + 14);

          const now = new Date();
          const diffTime = launchDate - now;
          const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));

          const bannerText = banner.querySelector('.banner-text');
          if (bannerText && diffDays > 0) {
            bannerText.textContent = `🚀 Our Startup Business Builder App is launching in just ${diffDays} day${diffDays > 1 ? 's' : ''}! Stay tuned and get ready to build your dream business with AI power.`;
          }

          setTimeout(() => {
            banner.style.display = 'none';
          }, 8000);
        }
      });
    </script>

