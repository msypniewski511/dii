<%= form_with(model: business_idea, data: { turbo: false }) do |form| %>
  <% if business_idea.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(business_idea.errors.count, "error") %> prohibited this business_idea from being saved:</h2>

      <ul>
        <% business_idea.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
      <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
      </symbol>
      <symbol id="info-fill" fill="currentColor" viewBox="0 0 16 16">
        <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z"/>
      </symbol>
      <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
      </symbol>
    </svg>

  <div class="row">
    <%#  bootstrap_offcanvas_hash('title') %>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title , class: 'form-control'%>
  </div>

  <div class="row">
    <%#  bootstrap_offcanvas_hash('description') %>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="row">
    <%#  bootstrap_offcanvas_hash('country') %>
    <%= form.label :country, style: "display: block" %>
    <%# form.text_field :country %>
    <%= form.country_select :country, {}, class: 'form-control' %>
  </div>

    <h3>PESTEL Analysis</h3>
  <%= form.fields_for :pestel_analysis do |pestel| %>
    <div class="row">
      <%= pestel.label :political, title: "How stable is the political climate in [Country]? Are there upcoming elections or policy shifts that could affect your industry?" %>
      <%= pestel.text_area :political, placeholder: "How stable is the political climate in [Country]? Are there upcoming elections or policy shifts that could affect your industry?", class: 'form-control', placeholder: "" %>
    </div>
    <div class="row">
      <%= pestel.label :economic %>
      <%= pestel.text_area :economic, class: 'form-control', placeholder: "What is the current economic climate in [Country]? Consider GDP growth, inflation, and consumer spending trends." %>
    </div>
    <div class="row">
      <%= pestel.label :social %>
      <%= pestel.text_area :social, class: 'form-control', placeholder: "How do cultural trends in [Country] impact the demand for your product/service? What are the demographic shifts?" %>
    </div>
    <div class="row">
      <%= pestel.label :technological %>
      <%= pestel.text_area :technological, class: 'form-control', placeholder: "What is the level of technological advancement in [Country]? How might innovation affect your idea?" %>
    </div>
    <div class="row">
      <%= pestel.label :environmental %>
      <%= pestel.text_area :environmental, class: 'form-control', placeholder: "What environmental factors (e.g., climate change regulations) could impact your business in [Country]?" %>
    </div>
    <div class="row">
      <%= pestel.label :legal %>
      <%= pestel.text_area :legal, class: 'form-control', placeholder: "What are the legal and regulatory requirements that your business idea must meet in [Country]?" %>
    </div>
  <% end %>

  <h3>SWOT Analysis</h3>
  <%= form.fields_for :swot_analysis do |swot| %>
    <div >
      <%= swot.label :strengths %>
      <%= swot.text_area :strengths, class: 'form-control', placeholder: "What are the unique advantages of your business idea in the context of [Country]?" %>
    </div>
    <div >
      <%= swot.label :weaknesses %>
      <%= swot.text_area :weaknesses, class: 'form-control', placeholder: "What internal factors might hinder your success?" %>
    </div>
    <div >
      <%= swot.label :opportunities %>
      <%= swot.text_area :opportunities, class: 'form-control', placeholder: "What external opportunities can you exploit in the market?" %>
    </div>
    <div >
      <%= swot.label :threats %>
      <%= swot.text_area :threats, class: 'form-control', placeholder: "What external challenges or competitors might pose a risk?" %>
    </div>
  <% end %>


  <br>

  <div class="row">
    <%= form.submit class: "btn bg-gradient-primary" %>
  </div>
<% end %>
