<% @title = "Business Ideas" %>
<div class="row">
  <div class="col p-4">
    <div class="card">
      <div class="card-header">

        <h1>Business ideas</h1>
      </div>

        <div id="business_ideas" class="card-body">
          
            <% @business_ideas.each do |business_idea| %>
              <div class="card mb-4">
                <%= render business_idea %>
                <div class="card-footer d-flex justify-content-between">
                  <%= link_to "Show this business idea", business_idea, class: "card-link" %>
                  <%= link_to "Delete this business idea", business_idea, method: :delete, data: { confirm: "Are you sure you want to delete this business idea?" }, class: "card-link text-danger text-end" %>
                </div>
              </div>
            <% end %>
        </div>
        <div class="card-footer">
          <%= link_to new_business_idea_path, class: "btn btn-icon btn-3 btn-outline-success" do %>
            <span class="btn-inner--icon"><i class="fas fa-plus"></i></span>
            <span class="btn-inner--text">New Business Idea</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>