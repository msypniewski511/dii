      <legend class="float-none w-auto px-3">Political:</legend>
      <%= format_text_to_html pestel_analysis.political %>
      <hr />
      <%= form_with url: "/business_ideas/#{@business_idea.id}/pestel_analyses", local: true, method: :patch, data: { turbo: "false" } do %>
        
        <%= hidden_field_tag :type, "political" %> 
        <%= submit_tag "Get AI Suggestions", class: "btn btn-outline-secondary" %>
      <% end %>
    </fieldset>

