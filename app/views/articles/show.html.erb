<div class="row">
  <div class="col p-4">
    <div class="card">
      <div class="card-header">
        <p style="color: green"><%= notice %></p>
      </div>
      <div class="card-body">
        <%= render @article %>

        <div>
          <%= link_to "Edit this article", edit_article_path(@article) %> |
          <%= link_to "Back to articles", articles_path %>

          <%= button_to "Destroy this article", @article, method: :delete, class: "btn btn-outline-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>