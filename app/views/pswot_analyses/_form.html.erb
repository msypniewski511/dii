<%= form_with(model: @swot, local: true) do |form| %>
  <% if swot.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(swot.errors.count, "error") %> prohibited this swot from being saved:</h2>

      <ul>
        <% swot.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
    <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
      <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
    </symbol>
    <symbol id="info-fill" fill="currentColor" viewBox="0 0 16 16">
      <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z"/>
    </symbol>
    <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
      <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
    </symbol>
  </svg>
  <div class="form-group">
    <h3>Strengths</h3>
    <div class="d-flex align-items-center mb-3">
      <%= bootstrap_offcanvas_hash('p_strengths') %>
      <p class="mb-0 ms-2">What are your key strengths that help you as an entrepreneur?</p>
    </div>
    <%= form.text_area :strengths, placeholder: "List your unique skills, experiences, or characteristics that give you an advantage as an entrepreneur. Consider leadership abilities, financial acumen, creativity, or networking strengths.", rows: 5, class: "form-control" %>  
  </div>

  <div class="form-group">
    <h3>Weaknesses</h3>
    <div class="d-flex align-items-center mb-3">
      <%= bootstrap_offcanvas_hash('p_weaknesses') %>
      <p class="mb-0 ms-2">What challenges or areas for improvement could hold you back?</p>
    </div>
    <%= form.text_area :weaknesses, placeholder: "Identify areas where you need improvement or challenges that might hold you back. Think about skills gaps, mindset barriers, or past business mistakes.", rows: 5, class: "form-control" %>
  </div>

  <div class="form-group">
    <h3>Opportunities</h3>
    <div class="d-flex align-items-center mb-3">
      <%= bootstrap_offcanvas_hash('p_opportunities') %>
      <p class="mb-0 ms-2">What external factors can help you grow?</p>
    </div>
    <%= form.text_area :opportunities, placeholder: "Explore external factors that could help you grow your business or improve your personal skills. Think about market trends, technology, education, or networking opportunities.", rows: 5, class: "form-control" %>
  </div>

  <div class="form-group">
    <h3>Threats</h3>
    <div class="d-flex align-items-center mb-3">
      <%= bootstrap_offcanvas_hash('p_threats') %>
      <p class="mb-0 ms-2">What external risks or challenges might impact you?</p>
    </div>
    <%= form.text_area :threats, placeholder: "Consider external challenges that may pose risks to your entrepreneurial journey. These could be industry competition, economic conditions, or personal constraints.", rows: 5, class: "form-control" %>
  </div>


  <%= form.submit "Analyze", class: "btn btn-primary" %>
<% end %>